
<%= render 'layouts/navigation' %>
<br>
<h2 align = "center"> Caretakers</h2>
<div align = "center">
  <% user.each do |user|%>
  <ul class = "listing">
    <div class = "row">
      <div class = "well col-md-4 col-md-offset-4">
        <li class = "article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li> <%= pluralize(user.colonies.count, "colony")if user.colonies %></li>
        <% if logged_in? and current_user.admin? %>
          <li><%=link_to "delete this user", user_path(user), method: :delete,
          data:{confirm:"Are you sure you want to delete the user and all their articles?"}%></li>
          <%end%>
        </div>
      </div>
    </ul>
    <%= paginate @users %>
    <% end %>
  </div>

<%= render "layouts/footer" %>
