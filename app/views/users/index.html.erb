
<%= render 'layouts/navigation' %>
<br>
<h2 align = "center"> Caretakers</h2>
<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.colonies.count, "colony") if user.colonies %></small></li>
          <% if logged_in? and current_user.admin? %>
          <li><%=link_to "delete this user", users_path(:id), method: :delete,
          data:{confirm:"Are you sure you want to delete the user and all their articles?"}%></li>
          <%end%>
        </div>
      </div>
    </ul>
  </div>
  <%end%>


<%= render "layouts/footer" %>
