<p id="notice"><%= notice %></p>

<h1>Colonies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <style>
  body{
    background-color: #FFC300;
  }
  </style>

  <tbody>
    <% @colonies.each do |colony| %>
      <tr>
        <td><%= colony.name %></td>
        <td><%= colony.address %></td>
        <td><%= link_to 'Edit', edit_colony_path(colony) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Colony', new_colony_path %>
