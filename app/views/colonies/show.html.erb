<link href="https://fonts.googleapis.com/css?family=Amatic+SC|Pacifico" rel="stylesheet">
<h2 align = "center"><%= @colony.name.titleize %></h2>
<div class = "well col-xs-8 col-xs-offset-2">
  <h4 class ="center description">Address:</h4>

  <hr>

  <%= simple_format(@colony.address) %>

  <div class="article-actions">
    <%=link_to "edit this colony", edit_colony_path(@colony), class:"btn btn-xs btn-primary"%>
    <%=link_to "delete this colony", colony_path(@colony), method: :delete,
    data: {confirm: "are you sure you want to delete this colony?"},
    class: "btn btn-xs btn-danger" %>
    <%= link_to "View all colonies", colonies_path, class: "btn btn-xs btn success"%>
