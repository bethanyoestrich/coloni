
  <% if colony.errors.any? %>
    <div id="error_explanation" class="error_explanation">
      <h2><%= pluralize(colony.errors.count, "error") %> prohibited this colony from being saved:</h2>

      <ul>
      <% colony.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "row">
    <div class = "col-lg">
      <%= form_for(@colony, :html=>{class:"form-horizontal", role:"form"}) do|f|%>
      <div class = "form-group">
        <div class = "control-label col-sm-2">
          <%= f.label :name%>
        </div>
          <div class = "col-sm-9">
              <%= f.text_field :name, class: "form-control", placeholder: "enter name", autofocus:true %>
          </div>
    </div>
    <br>
      <div class = "form-group">
        <div class = "control-label col-sm-2">
          <%= f.label :address %>
        </div>
        <div class ='col-sm-9'>
          <%= f.text_area :address, rows:3, class:"form-control", placeholder:"enter address" %>
      </div>
    </div>
    <div class="form-group">
      <div class = "col-sm-offset-2 col-sm-10">
        <%= f.submit "create", class: "btn btn-primary btn-lg"%>
      </div>
    </div>
    <%end%>
  </div>
</div>
